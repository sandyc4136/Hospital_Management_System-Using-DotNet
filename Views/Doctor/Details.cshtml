@model HMS.Models.Doctor

<h2>Doctor Details</h2>

<div>
    <h4>Doctor Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">First Name:</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name:</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Age:</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Gender:</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">BloodGroup:</dt>
        <dd class="col-sm-10">@Model.BloodGroup</dd>

        <dt class="col-sm-2">Department:</dt>
        <dd class="col-sm-10">@Model.Department</dd>

        <dt class="col-sm-2">ProfileImage:</dt>
        <dd class="col-sm-10"><img src="~/Images/@Model.ProfileImage" width="180px" height="300px" asp-append-version="true"></dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    @*<a asp-action="Index">Back to List</a>*@
</p>